<!DOCTYPE html>
<html>
<head>
<script>
var id = getParameter('id'){{#if Batch}} || {{Batch.Id}}{{/if}};

function checkStatus() {
	get('/admin/batchstatus.html', { id: id }, function(result) {
		if(result.data) {
			$('#progressbar').progressbar({value: result.data.PercentComplete});
			$('#status').text(result.data.Status);
		}
		if(result.error) {
			message(result.error);
			if(result.redirect) {
				jumpButton('Continue', result.redirect);
			}
		} else if(result.redirect) {
			window.location = result.redirect;
		} else {
			setTimeout(checkStatus, 1000);
		}
	});
}
$(function() {
	$('#progressbar').progressbar();
	checkStatus();
});
</script>
</head>
<body>
<div id="progressbar"></div>
<div id="status"></div>
</body>
</html>